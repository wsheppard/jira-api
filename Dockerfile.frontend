# Multi-stage build for React frontend
FROM node:18-alpine AS build

WORKDIR /app

# Copy frontend source
COPY frontend/package*.json ./
RUN npm install

COPY frontend/ ./
RUN npm run build

# Serve with Caddy
FROM caddy:2-alpine

COPY --from=build /app/build /usr/share/caddy
COPY Caddyfile.frontend /etc/caddy/Caddyfile

EXPOSE 80
